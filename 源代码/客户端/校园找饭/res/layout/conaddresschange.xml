<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="fill_parent"
        android:layout_height="48dip"
        android:background="@drawable/background_orange"
        android:clickable="true"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingLeft="8dip"
            android:text="默认地址修改"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>

    <EditText
        android:id="@+id/conaddresschangeedit"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/linearLayout1"
        android:background="@android:drawable/editbox_background"
        android:ems="10"
        android:hint="新地址"
        android:padding="10dp" />

    <TextView
        android:id="@+id/textView13333"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/conaddresschangeedit"
        android:padding="2dp"
        android:text="Tip：您修改的地址将作为默认地址，您以后的订单默认都将使用该地址，但也可在订单的确认购买页进行修改。"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#8F8F8F" />
    <Button
        android:id="@+id/connewaddresstijiao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/textView13333"
        android:background="@drawable/tijiao"></Button>
  
</RelativeLayout>

